<%- include('includes/header') %>

  <link rel="stylesheet" type="text/css" href="/css/products.css" />

  <body>
    <div class="products-container">

      <div class="navigation-menu">
        <ul class="nav justify-content-center">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/">Bosh sahifa</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/product/all">Mahsulotlar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/user/all">Foydalanuvchilar</a>
          </li>
          <li class="nav-item" onclick="return confirm('Rostdan ham chiqmoqchimisiz?')">
            <a class="nav-link" href="/admin/logout">Chiqish</a>
          </li>
        </ul>
      </div>

      <div class="restaurant-menu-frame">
        <div class="board">

          <!-- RO‘YXAT -->
          <div class="dishes-table">
            <span class="new-dish-txt table-title">MAHSULOTLAR RO‘YXATI</span>

            <table class="table table-bordered table-hover">
              <thead class="thead-light">
                <tr class="thead-light">
                  <th scope="col">T/r</th>
                  <th scope="col">Mahsulot nomi</th>
                  <th scope="col">Narxi</th>
                  <th scope="col">Teglar</th>
                  <th scope="col">Rasm</th>
                  <th scope="col">Holat</th>
                </tr>
              </thead>

              <% if (products && products.length) { %>
                <% products.map(function (value, key) { %>
                  <tbody class="table-body">
                    <tr>
                      <td>
                        <%= key + 1 %>
                      </td>

                      <td class="text-left">
                        <div class="product-name-cell">
                          <strong>
                            <%= value.productName %>
                          </strong>
                          <% if (value.productDesc) { %>
                            <div class="muted-desc">
                              <%= value.productDesc %>
                            </div>
                            <% } %>
                        </div>
                      </td>

                      <td>
                        <%= value.productPrice %>
                      </td>

                      <td class="text-left">
                        <% if (value.productTags && value.productTags.length) { %>
                          <div class="tags-wrap">
                            <% value.productTags.forEach(function(tag){ %>
                              <span class="tag-pill">
                                <%= productTagLabels[tag] %>
                              </span>
                              <% }) %>
                          </div>
                          <% } else { %>
                            <span class="muted">-</span>
                            <% } %>
                      </td>


                      <td>
                        <% if (value.productImages && value.productImages.length> 0) { %>
                          <img src="/<%= value.productImages[0] %>" alt="Mahsulot rasmi" class="thumb"
                            onerror="this.outerHTML = '<span class=&quot;muted&quot;>Rasm yo‘q</span>';" />
                          <% } else { %>
                            <span class="muted">Rasm yo‘q</span>
                            <% } %>
                      </td>

                      <td>
                        <select class="spec-select new-product-status" id="<%= value._id %>">
                          <option value="PAUSE" <%=value.productStatus==='PAUSE' ? 'selected' : '' %>>TO‘XTATILGAN
                          </option>
                          <option value="PROCESS" <%=value.productStatus==='PROCESS' ? 'selected' : '' %>>FAOL</option>
                          <option value="DELETE" <%=value.productStatus==='DELETE' ? 'selected' : '' %>>O‘CHIRILGAN
                          </option>
                        </select>
                      </td>
                    </tr>
                  </tbody>
                  <% }); %>
                    <% } else { %>
                      <tbody class="table-body">
                        <tr>
                          <td colspan="6" class="empty-state">Hozircha mahsulot yo‘q.</td>
                        </tr>
                      </tbody>
                      <% } %>
            </table>

            <div class="long-input actions-row">
              <button class="btn btn-primary" id="process-btn" type="button">
                Yangi mahsulot qo‘shish
              </button>
            </div>
          </div>

          <!-- CREATE FORM -->
          <form onsubmit="return validateForm()" action="/admin/product/create" method="POST" class="dish-container"
            enctype="multipart/form-data">
            <div class="long-input form-title-row">
              <span class="new-dish-txt">YANGI MAHSULOT MA’LUMOTLARI</span>
            </div>

            <input name="productStatus" value="PAUSE" class="product-status" hidden />

            <div class="long-input">
              <label>Mahsulot nomi</label>
              <input type="text" placeholder="Masalan: Collagen krem" name="productName" class="product-name"
                required />
            </div>

            <div class="long-input">
              <label>Narxi</label>
              <input type="number" placeholder="Masalan: 120000" name="productPrice" class="product-price" required
                min="0" />
            </div>

            <div class="long-input">
              <label>Teglar (bir nechta tanlash mumkin)</label>
              <div class="tags-grid">
                <% productTagsEnum.forEach(function(tag){ %>
                  <label class="tag-check">
                    <input type="checkbox" name="productTags" value="<%= tag %>" />
                    <span>
                      <%= productTagLabels[tag] %>
                    </span>
                  </label>
                  <% }) %>
              </div>

            </div>

            <div class="long-input">
              <label>Mahsulot tavsifi</label>
              <textarea name="productDesc" class="product-desc" placeholder="Ixtiyoriy..."></textarea>
            </div>

            <div class="img-frame">
              <label>Mahsulot rasmlari</label>

              <div class="media-frame">
                <div class="upload-img-box">
                  <img src="/img/upload.svg" class="1" id="image-section-1" />
                  <input type="file" id="file" name="productImages" class="image-one" required
                    onchange="previewFileHandler(this, 1)" />
                </div>

                <div class="upload-img-box">
                  <img src="/img/upload.svg" class="2" id="image-section-2" />
                  <input type="file" id="file" name="productImages" class="image-two"
                    onchange="previewFileHandler(this, 2)" />
                </div>

                <div class="upload-img-box">
                  <img src="/img/upload.svg" class="3" id="image-section-3" />
                  <input type="file" id="file" name="productImages" class="image-three"
                    onchange="previewFileHandler(this, 3)" />
                </div>

                <div class="upload-img-box">
                  <img src="/img/upload.svg" class="4" id="image-section-4" />
                  <input type="file" id="file" name="productImages" class="image-four"
                    onchange="previewFileHandler(this, 4)" />
                </div>

                <div class="upload-img-box">
                  <img src="/img/upload.svg" class="5" id="image-section-5" />
                  <input type="file" id="file" name="productImages" class="image-five"
                    onchange="previewFileHandler(this, 5)" />
                </div>
              </div>

              <div class="hint">
                Eslatma: 1-rasm majburiy, qolganlari ixtiyoriy.
              </div>
            </div>

            <div class="operation-buttons">
              <button class="btn btn-danger" id="cancel-btn" type="button">Bekor qilish</button>
              <button type="submit" class="btn btn-primary" id="create-btn">Saqlash</button>
            </div>
          </form>

        </div>
      </div>
    </div>

    <script type="text/javascript" src="/js/products.js"></script>
  </body>

  <%- include('includes/footer') %>